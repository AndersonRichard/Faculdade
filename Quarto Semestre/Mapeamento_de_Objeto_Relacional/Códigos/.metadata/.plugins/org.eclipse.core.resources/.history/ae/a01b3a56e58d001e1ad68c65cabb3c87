}
	public static void menuCompra() {
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("\nMenu Compra:");
            System.out.println("1. Consultar Compra");
            System.out.println("2. Listar Todas as Compras");
            System.out.println("3. Sair");
            System.out.println("0. Voltar para o Menu Concessionaria");

            System.out.print("Escolha uma opção: ");
            int opcaoCompra = scanner.nextInt();

            switch (opcaoCompra) {
                case 1:
                    DataBase.consultarCompra();
                    break;
                case 3:
                    return;
                case 0:
                    return;
                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
        }
    }
}
