CREATE DATABASE RESERARCH_PROJECT;
\l
\c RESERARCH_PROJECT;

CREATE TABLE AREA_PESQUISA(
    CODIGO NUMERIC(20) NOT NULL,    //CHAVE PRIMARIA
    NOME VARCHAR(50) NOT NULL,
    DESCRICAO VARCHAR(350) NOT NULL,
    INDICE_RELEVANCIA VARCHAR(10) NOT NULL
);
ALTER TABLE AREA_PESQUISA ADD CONSTRAINT AREA_PESQUISA_PK PRIMARY KEY (CODIGO);

CREATE TABLE AVALIA(///apagar
    CPF_ACESSOR VARCHAR(11) NOT NULL,       //CHAVE ESTRANGEIRA
    CODIGO_AREA NUMERIC(20) NOT NULL        //CHAVE ESTRANGEIRA
);
ALTER TABLE AVALIA ADD CONSTRAINT AVALIA_PK PRIMARY KEY (CPF_ACESSOR);
ALTER TABLE AVALIA ADD CONSTRAINT AVALIA_FK_ACESSOR FOREIGN KEY (CPF_ACESSOR) REFERENCES ACESSOR (CPF);**
ALTER TABLE AVALIA ADD CONSTRAINT AVALIA_FK_AREA FOREIGN KEY (CODIGO_AREA) REFERENCES AREA_PESQUISA (CODIGO);

